{
  "name": "isoly",
  "version": "0.0.47",
  "description": "Datatypes and functions specified by ISO-standards.",
  "author": "PayFunc",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payfunc/isoly"
  },
  "bugs": {
    "url": "https://github.com/payfunc/isoly/issues"
  },
  "homepage": "https://payfunc.com/open-source/isoly",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "fix": "eslint '**/*.{js,ts,tsx}' --fix",
    "build": "tsc -p .",
    "test": "jest",
    "prepare": "npm run build",
    "clean": "rm -rf dist node_modules coverage"
  },
  "devDependencies": {
    "@types/jest": "^28",
    "@types/node": "^16",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "eslint": "^8.15.0",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20220323",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28",
    "prettierx": "github:utily/prettierx#utily-20220323",
    "ts-jest": "^28",
    "typescript": "^4.7.3"
  }
}
